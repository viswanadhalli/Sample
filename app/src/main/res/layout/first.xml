<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/vishnu" />


    <TextView
        android:id="@+id/t1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"
        android:text="SHRI VISHNU EDUCATIONAL SOCIETY HOSTELS"
        android:textColor="#F7F3F3"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="9dp"
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Click here for food permission"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="25dp"
        />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="submit" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Click here to Birthday permissions"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:layout_marginLeft="9dp"
        android:textStyle="bold"
        android:id="@+id/t3"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_gravity="center"
        android:text="submit"/>
    <TextView
        android:layout_marginLeft="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Click here to Hospital permissions"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/t4"
        android:layout_marginTop="5dp"
        />
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="submit"/>
    <TextView
        android:layout_marginLeft="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="click here to File Complaints"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/t5"
        android:layout_marginTop="5dp"
        />
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="submit"/>

    <TextView
        android:layout_marginLeft="9dp"
        android:id="@+id/t6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Click here to view circulars"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:textStyle="bold" />
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="submit"/>


</LinearLayout>