<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color1"
        android:text="Enter  Complaint"
        android:textSize="50dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        android:hint="Hostel Name"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:id="@+id/sector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        android:hint="sector"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:id="@+id/no"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sector"
        android:layout_marginTop="0dp"
        android:hint="Hostel Room no"
        android:inputType="number"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg"
        android:hint="Complaint"
        android:textSize="25dp"
        android:inputType="text"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no"
        android:hint="Register no"
        android:inputType="text"
        android:textSize="25dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/b1"
        android:layout_marginLeft="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaint"
        android:layout_marginTop="8dp"
        android:background="@color/color1"
        android:text="submit" />


</RelativeLayout>